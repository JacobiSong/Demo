<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demo">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="WeCourse"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Demo">
        <activity
            android:name=".activity.LaunchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.Demo.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.ConnectService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activity.CourseAddActivity"
            android:label="@string/course_add" />
        <activity
            android:name=".activity.NotificationActivity"
            android:label="@string/title_activity_notifications" />
        <activity
            android:name=".activity.UserProfileActivity"
            android:label="@string/title_activity_user_profile" />
        <activity
            android:name=".activity.CourseInformationActivity"
            android:label="课程信息"
            android:parentActivityName=".activity.CourseChatActivity" />
        <activity
            android:name=".activity.CourseNoticeActivity"
            android:label="通知"
            android:parentActivityName=".activity.CourseMenuActivity" />
        <activity
            android:name=".activity.CourseFileActivity"
            android:label="文件"
            android:parentActivityName=".activity.CourseMenuActivity" />
        <activity
            android:name=".activity.CourseMenuActivity"
            android:label="菜单"
            android:parentActivityName=".activity.CourseMenuActivity" />
        <activity
            android:name=".activity.MembersActivity"
            android:label="群成员"
            android:parentActivityName=".activity.CourseChatActivity" />
        <activity
            android:name=".activity.UserInfoActivity"
            android:label="信息"
            android:parentActivityName=".activity.CourseChatActivity" />
        <activity
            android:name=".activity.CourseChatActivity"
            android:label="课程"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.RegisterActivity"
            android:label="注册"/>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".activity.LoginActivity"
            android:label="登录" />
    </application>
</manifest>