<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageForUserInThumb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/account_circle_80" />

    <TextView
        android:id="@+id/textForUsernameInThumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="name"
        app:layout_constraintEnd_toEndOf="@+id/imageForUserInThumb"
        app:layout_constraintStart_toStartOf="@+id/imageForUserInThumb"
        app:layout_constraintTop_toBottomOf="@+id/imageForUserInThumb" />
</androidx.constraintlayout.widget.ConstraintLayout>