<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mine_item_view"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:background="@color/light_gray"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/mine_root"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/icon_layout"
            android:layout_alignParentLeft="true"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/mine_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                tools:background="@drawable/ic_baseline_settings_24"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/icon_layout">

            <TextView
                android:id="@+id/mine_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                tools:text="设置"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/arrow_right_24" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>